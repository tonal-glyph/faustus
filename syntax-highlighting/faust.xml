<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Faust" version="1" kateversion="2.4" section="Sources" extensions="*.dsp;*.lib" mimetype="text/x-faust" priority="9">
  <highlighting>
    <list name="primitives">
	  <item> mem </item>
      <item> prefix </item>
      <item> int </item>
      <item> float </item>
      <item> rdtable </item>
      <item> rwtable </item>
      <item> select2 </item>
      <item> select3 </item>
      <item> ffunction </item>
      <item> fconstant</item>
      <item> fvariable</item>
      <item> button </item>
      <item> checkbox </item>
      <item> vslider </item>
      <item> hslider </item>
      <item> nentry </item>
      <item> vgroup </item>
      <item> hgroup </item>
      <item> tgroup </item>
      <item> vbargraph </item>
      <item> hbargraph </item>
      <item> attach </item>
      <item> acos </item>
      <item> asin </item>
      <item> atan </item>
      <item> atan2 </item>
      <item> cos </item>
      <item> sin </item>
      <item> tan </item>
      <item> exp </item>
      <item> log </item>
      <item> log10 </item>
      <item> pow </item>
      <item> sqrt </item>
      <item> abs </item>
      <item> min </item>
